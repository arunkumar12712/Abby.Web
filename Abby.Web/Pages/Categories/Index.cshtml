@page
@model Abby.Web.Pages.Categories.IndexModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
               <i class="bi bi-plus-square-fill"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="m-75 btn-group" role="group">

                       
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                         </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


